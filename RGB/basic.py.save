#!/usr/bin/env python

import time

from rgbmatrix5x5 import RGBMatrix5x5

print("""
RGBMatrix5x5 - Emoji Loop Demo
Displays a loop of emojis on the 5x5 LED matrix.
Press Ctrl+C to exit!
""")

rgbmatrix5x5 = RGBMatrix5x5()

rgbmatrix5x5.set_clear_on_exit()
rgbmatrix5x5.set_brightness(0.8)

# Define emoji pixel art designs
smiley = [
    " R R ",
    "     ",
    "R   R",
    " RRR ",
]

heart = [
    "RR RR",
    "RRRRR",
    " RRR ",
    "  R  ",
]

otro = [,]

emoji_loop = [smiley, heart, otro]

def draw_emoji(emoji_design):
    for y, row in enumerate(emoji_design):
        for x, pixel in enumerate(row):
            if pixel == 'R':
                rgbmatrix5x5.set_pixel(x, y, 255, 0, 0)
            else:
                rgbmatrix5x5.set_pixel(x, y, 0, 0, 0)
    rgbmatrix5x5.show()

while True:
    for emoji in emoji_loop:
        draw_emoji(emoji)
        time.sleep(0.5)
